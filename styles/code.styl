.token.comment,
.token.block-comment,
.token.prolog,
.token.doctype,
.token.cdata {
	color: #b0bec5;
}

.token.punctuation {
	color: #FFB8D1;
}

.token.number
  color #C5A3FF
.token.property,
.token.tag,
.token.boolean,
.token.function-name,
.token.constant,
.token.symbol,
.token.deleted {
	color: #F8F8F2;
}
.token.string
  color: #1be09b
.token.selector,
.token.attr-name,
.token.char,
.token.function,
.token.builtin,
.token.inserted {
	color: #1bc5e0;
}

.token.operator
  color #FFB8D1;
.token.entity,
.token.url,
.token.variable {
	color: #F8F8F2;
}

.token.class-name 
  color #ceb1ff

.token.atrule,
.token.attr-value,
.token.keyword {
	color: #C2FFDF;
}

.token.regex,
.token.important {
	color: #1bc5e0;
}

.language-css .token.string,
.style .token.string {
	color: #1bc5e0;
}

.token.important {
	font-weight: normal;
}

.token.bold {
	font-weight: bold;
}
.token.italic {
	font-style: italic;
}

.token.entity {
	cursor: help;
}

.namespace {
	opacity: .7;
}

@media screen and (max-width: 767px) {
	pre[class*="language-"]:before,
	pre[class*="language-"]:after {
		bottom: 14px;
		box-shadow: none;
	}

}

/* Plugin styles */
.token.tab:not(:empty):before,
.token.cr:before,
.token.lf:before {
	color: #e0d7d1;
}
